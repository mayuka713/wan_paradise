{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",
    "moduleResolution": "node",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                
    "resolveJsonModule": true,                           
    "baseUrl": "./",                                     
    "paths": {                                           
      "@/*": ["src/*"]                                   
    },
    "lib": ["es6", "dom"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express", "express-session"]
  },
  "include": ["src/**/*", "types/**/*"]
}
