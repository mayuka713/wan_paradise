{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",   // JSX のサポートを追加
    "lib": ["dom", "es6", "esnext"] // 使用する標準ライブラリを指定
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
