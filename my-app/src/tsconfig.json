{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["dom", "es6", "esnext"]
  },
  "include": ["./*"],
  "exclude": ["./dist"]
}